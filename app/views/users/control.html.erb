<div class="row project_container">
	<div class="col-md-2 center-block">
		<button type="button" class="new_project btn btn-primary" aria-label="Left Align" data-toggle="modal" data-target="#newProject">
			<span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span> New Project
		</button>
	</div>
	<div class="col-md-9 col-md-offset-1">
		<h2>all projects</h2>
		<div class="project_tile_container">
			<div class="project_tile">
				<h5>Explore StileHQ!</h5>
				<p class="description">A sample project to help you discover StileHq.</p>
			</div>
			<% @current_users_projects.each do |p| %>
					<div class="project_tile">
						<%= link_to p.title, {:controller => "users", :action => "edit_project", :id => p.id } %>
						<p class="description"><%= p.descrip %></p>
					</div>
			<% end %>
		</div>
	</div>
</div>

<!-- NEW PROJECT MODAL -->
<div class="modal fade" id="newProject" tabindex="-1" role="dialog" aria-labelledby="newProjectLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Create a new Project!</h4>
      </div>
      <div class="modal-body">
			<%= form_for @project, url: {:action => "create"} do |f| %>
			  <p>
			    <%= f.label :title %><br>
			    <%= f.text_field :title %>
			  </p>
			 
			  <p>
			    <%= f.label :description %><br>
			    <%= f.text_area :descrip %>
			  </p>
			   <%= f.hidden_field :user_id, :value => current_user.id %>
			
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= f.submit 'Save Changes', :class => 'btn btn-primary' %>
      </div>
      <% end %>
    </div>
  </div>
</div>